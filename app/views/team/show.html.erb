<% provide(:title,  "#{@team.team_name} - Team Information") %>
<h1><%= @team.team_name %> </h1>
<p><%= link_to "Go back to teams" , team_index_path %></p>
<p>Location:  </p>
<p>Record:  </p>
<table class="table">
    <tr>
        <td>Date</td>
        <td>Home Team</td>
        <td>Score</td>
        <td>Away Team</td>
    </tr>
    
    <% @games.each do |game| %>
        <tr>
            <td><%= game.date %></td>
            <td><%= game.home_team.team_name %></td>
            <td><%= game.home_team_score %> - <%= game.away_team_score %></td>
            <td><%= game.away_team.team_name %></td>
        </tr>
    <% end %>
</table>
